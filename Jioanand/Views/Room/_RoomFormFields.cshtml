@model Jioanand.Models.Room

<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

<div class="mb-3">
    <label asp-for="LocationId" class="form-label">Location</label>
    <select asp-for="LocationId" class="form-select" asp-items="@(new SelectList(ViewBag.Locations, "LocationId", "Name"))" required>
        <option value="">Select Location</option>
    </select>
    <span asp-validation-for="LocationId" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="RoomNumber" class="form-label">Room Number</label>
    <input asp-for="RoomNumber" class="form-control" required />
    <span asp-validation-for="RoomNumber" class="text-danger"></span>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <label asp-for="Floor" class="form-label">Floor</label>
        <input asp-for="Floor" class="form-control" type="number" required />
        <span asp-validation-for="Floor" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Type" class="form-label">Room Type</label>
        <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<Jioanand.Models.Enums.RoomType>()" required>
            <option value="">Select Type</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <label asp-for="Capacity" class="form-label">Capacity</label>
        <input asp-for="Capacity" class="form-control" type="number" required />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="PricePerDay" class="form-label">Price Per Day</label>
        <div class="input-group">
            <span class="input-group-text">â‚¹</span>
            <input asp-for="PricePerDay" class="form-control" type="number" step="0.01" required />
        </div>
        <span asp-validation-for="PricePerDay" class="text-danger"></span>
    </div>
</div>

<div class="mb-3">
    <label asp-for="Description" class="form-label">Description</label>
    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
