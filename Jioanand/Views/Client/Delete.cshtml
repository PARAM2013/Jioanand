@model Jioanand.Models.Client

@{
    ViewData["Title"] = "Delete Client";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="h4 mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Confirm Deletion
                    </h1>
                </div>
                <div class="card-body">
                    <p class="lead">Are you sure you want to permanently delete this client?</p>

                    <div class="alert alert-warning" role="alert">
                        This action cannot be undone. Deleting a client will not delete their past bookings, but it may orphan records.
                    </div>

                    <h5 class="mt-4">Client Details:</h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Contact Number</dt>
                        <dd class="col-sm-8">@Model.ContactNumber</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ClientId" />

                        <div class="d-flex justify-content-start gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Yes, Delete
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
