@model Jioanand.Models.Room

@{
    ViewData["Title"] = "Create Room";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="card-title h4 mb-4">Create New Room</h1>

                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="LocationId" class="form-label">Location</label>
                            <select asp-for="LocationId" class="form-select" required>
                                <option value="">Select Location</option>
                                @foreach (var location in ViewBag.Locations)
                                {
                                    <option value="@location.LocationId">@location.Name</option>
                                }
                            </select>
                            <span asp-validation-for="LocationId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RoomNumber" class="form-label">Room Number</label>
                            <input asp-for="RoomNumber" class="form-control" required />
                            <span asp-validation-for="RoomNumber" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="Floor" class="form-label">Floor</label>
                                <input asp-for="Floor" class="form-control" type="number" required />
                                <span asp-validation-for="Floor" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="Type" class="form-label">Room Type</label>
                                <select asp-for="Type" class="form-select" required>
                                    <option value="">Select Type</option>
                                    @foreach (var type in ViewBag.RoomTypes)
                                    {
                                        <option value="@type.Id">@type.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="Capacity" class="form-label">Capacity</label>
                                <input asp-for="Capacity" class="form-control" type="number" required />
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="PricePerDay" class="form-label">Price Per Day</label>
                                <div class="input-group">
                                    <span class="input-group-text">â‚¹</span>
                                    <input asp-for="PricePerDay" class="form-control" type="number" step="0.01" required />
                                </div>
                                <span asp-validation-for="PricePerDay" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Create Room
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Bootstrap form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
