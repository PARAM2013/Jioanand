@model IEnumerable<Jioanand.Models.Room>
@{
    ViewData["Title"] = "Rooms";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Rooms</h1>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Room
            </a>
            <a asp-action="Availability" class="btn btn-info text-white">
                <i class="bi bi-calendar3"></i> Check Availability
            </a>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card h-100 @(item.Status == Jioanand.Models.Enums.RoomStatus.Available ? "border-success" : "border-danger")">
                    <div class="card-body">
                        <h5 class="card-title">@item.RoomNumber</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Location.Name - Floor @item.Floor</h6>
                        
                        <div class="mt-3">
                            <span class="badge bg-primary">@item.Type</span>
                            <span class="badge bg-@(item.Status == Jioanand.Models.Enums.RoomStatus.Available ? "success" : "danger")">
                                @item.Status
                            </span>
                        </div>

                        <ul class="list-unstyled mt-3">
                            <li><i class="bi bi-people"></i> Capacity: @item.Capacity</li>
                            <li><i class="bi bi-currency-rupee"></i> â‚¹@item.PricePerDay per day</li>
                        </ul>

                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <p class="card-text">@item.Description</p>
                        }
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-outline-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.RoomId" class="btn btn-outline-info">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .btn-group {
            gap: 5px;
        }
        @@media (max-width: 576px) {
            .d-flex {
                flex-direction: column;
                gap: 1rem;
            }
            .btn-group {
                flex-direction: column;
            }
        }
    </style>
}
