@model Jioanand.Models.Client

@{
    ViewData["Title"] = "Edit Client";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h1 class="h4 mb-0">
                        <i class="bi bi-pencil-square"></i> Edit Client: @Model.FullName
                    </h1>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ClientId" />
                        <input type="hidden" asp-for="CreatedAt" />

                        <partial name="_ClientFormFields" for="@Model" />

                        <div class="d-flex justify-content-start gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
