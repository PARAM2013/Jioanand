@model Jioanand.Models.Room

@{
    ViewData["Title"] = "Room Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h1 class="h4 mb-0">
                        <i class="bi bi-door-open"></i> Room @Model.RoomNumber
                    </h1>
                    <span class="badge bg-@(Model.Status == Jioanand.Models.Enums.RoomStatus.Available ? "success" : "danger") fs-6">
                        @Model.Status
                    </span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="card-title text-primary">@Model.Location.Name</h5>
                            <p class="card-text text-muted">
                                <i class="bi bi-geo-alt"></i> Floor @Model.Floor
                            </p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <p class="h5">
                                <i class="bi bi-currency-rupee"></i> @Model.PricePerDay.ToString("N2") <span class="text-muted fs-6">/ day</span>
                            </p>
                        </div>
                    </div>

                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4"><i class="bi bi-tags"></i> Type</dt>
                        <dd class="col-sm-8">@Model.Type</dd>

                        <dt class="col-sm-4"><i class="bi bi-people"></i> Capacity</dt>
                        <dd class="col-sm-8">@Model.Capacity guests</dd>

                        <dt class="col-sm-4"><i class="bi bi-card-text"></i> Description</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Description) ? "No description provided." : Model.Description)</dd>

                        <dt class="col-sm-4"><i class="bi bi-calendar-plus"></i> Created On</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToLocalTime().ToString("g")</dd>

                        <dt class="col-sm-4"><i class="bi bi-calendar-check"></i> Last Updated</dt>
                        <dd class="col-sm-8">@Model.UpdatedAt.ToLocalTime().ToString("g")</dd>
                    </dl>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-start gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.RoomId" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
