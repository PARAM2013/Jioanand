@model IEnumerable<Jioanand.Models.Room>
@{
    ViewData["Title"] = "Room Management";
}

<div class="container-fluid mt-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h1 class="h3 mb-0">
            <i class="bi bi-door-closed"></i> Room Management
        </h1>
        <div class="d-flex gap-2 flex-wrap">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Room
            </a>
            <a asp-action="Availability" class="btn btn-info text-white">
                <i class="bi bi-calendar3"></i> Check Availability
            </a>
        </div>
    </div>

    <!-- Room Grid -->
    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm room-card">
                        <div class="card-header d-flex justify-content-between align-items-center bg-light">
                            <h5 class="card-title mb-0 fs-6 fw-bold text-primary">
                                <i class="bi bi-door-open"></i> Room @item.RoomNumber
                            </h5>
                            <span class="badge bg-@(item.Status == Jioanand.Models.Enums.RoomStatus.Available ? "success" : "danger")">
                                @item.Status
                            </span>
                        </div>
                        <div class="card-body">
                            <p class="card-subtitle mb-2 text-muted">
                                <i class="bi bi-geo-alt"></i> @item.Location.Name - Floor @item.Floor
                            </p>
                            <p class="card-text">
                                <span class="badge bg-secondary">@item.Type</span>
                                <span class="badge bg-info text-dark">
                                    <i class="bi bi-people"></i> @item.Capacity Guests
                                </span>
                            </p>
                            <p class="card-text h5 mt-3">
                                <i class="bi bi-currency-rupee"></i>@item.PricePerDay.ToString("N0")
                                <small class="text-muted fs-6">/ day</small>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-sm btn-outline-primary" title="Edit">
                                    <i class="bi bi-pencil-square"></i> <span class="d-none d-md-inline">Edit</span>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.RoomId" class="btn btn-sm btn-outline-info" title="Details">
                                    <i class="bi bi-info-circle"></i> <span class="d-none d-md-inline">Details</span>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="bi bi-trash"></i> <span class="d-none d-md-inline">Delete</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center p-5 border rounded bg-light">
            <i class="bi bi-door-closed fs-1"></i>
            <h4 class="mt-3">No Rooms Found</h4>
            <p>There are no rooms configured in the system yet.</p>
            <a asp-action="Create" class="btn btn-primary mt-2">
                <i class="bi bi-plus-circle"></i> Add the First Room
            </a>
        </div>
    }
</div>

@section Styles {
    <style>
        .room-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        .room-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
        .btn-group .btn {
            border-radius: 0.25rem !important;
        }
        .btn-group {
            gap: 0.5rem;
        }
    </style>
}
