@model Jioanand.Models.Client

@{
    ViewData["Title"] = "Client Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h1 class="h4 mb-0">
                        <i class="bi bi-person-badge"></i> @Model.FullName
                    </h1>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-primary">Contact Information</h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4"><i class="bi bi-telephone"></i> Contact Number</dt>
                        <dd class="col-sm-8">@Model.ContactNumber</dd>

                        <dt class="col-sm-4"><i class="bi bi-phone"></i> Alternate Contact</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.AlternateContact) ? "N/A" : Model.AlternateContact)</dd>

                        <dt class="col-sm-4"><i class="bi bi-envelope"></i> Email</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Email) ? "N/A" : Model.Email)</dd>

                        <dt class="col-sm-4"><i class="bi bi-geo-alt"></i> Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                    </dl>

                    <h5 class="card-title text-primary mt-4">System Information</h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4"><i class="bi bi-calendar-plus"></i> Created On</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToLocalTime().ToString("g")</dd>

                        <dt class="col-sm-4"><i class="bi bi-calendar-check"></i> Last Updated</dt>
                        <dd class="col-sm-8">@Model.UpdatedAt.ToLocalTime().ToString("g")</dd>
                    </dl>

                    <h5 class="card-title text-primary mt-4">Uploaded Documents</h5>
                    <hr />
                    @if (Model.Documents != null && Model.Documents.Any())
                    {
                        <ul class="list-group">
                            @foreach (var doc in Model.Documents)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="bi bi-file-earmark-text"></i>
                                        <strong>@doc.DocumentType</strong>
                                        <small class="text-muted d-block">Uploaded on @doc.UploadedAt.ToLocalTime().ToString("g")</small>
                                    </div>
                                    <a href="@Url.Content("~" + doc.FilePath)" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View Document
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No documents have been uploaded for this client.</p>
                    }

                    <h5 class="card-title text-primary mt-4">Booking History</h5>
                    <hr />
                    @if (Model.Bookings != null && Model.Bookings.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Booking ID</th>
                                        <th>Check-In</th>
                                        <th>Check-Out</th>
                                        <th>Total Amount</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in Model.Bookings.OrderByDescending(b => b.CheckInDate))
                                    {
                                        <tr>
                                            <td>@booking.BookingId</td>
                                            <td>@booking.CheckInDate.ToString("d")</td>
                                            <td>@booking.CheckOutDate.ToString("d")</td>
                                            <td>@booking.TotalAmount.ToString("C")</td>
                                            <td>@booking.Status</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">This client has no booking history.</p>
                    }
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-start gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.ClientId" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
